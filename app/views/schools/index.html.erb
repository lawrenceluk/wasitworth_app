<% provide :title, "Was It Worth" %>
<div class="center">
	<%= image_tag 'logo.png', width: 200 %>
	<div class="gap row">
		<div class="large-6 small-6 large-centered small-centered columns">
			<div class="row">
				<% 3.times do %>
					<div class="large-4 small-4 columns center">
						<i class="fa fa-asterisk"></i>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<h1>Pick a School</h1>
	<div class="row">
		<div class="large-10 large-centered small-11 small-centered columns">
		  <% @schools.each do |school| %>
		    <%= link_to school.name, school.hiddenname, class: "schoollink" %>
		  <% end %>
		  <%= link_to new_school_path, class: "schoollink lighter" do %>
		  	<i class="fa fa-plus"></i> Add Your School
		  <% end %>
		</div>
	</div>
	<div class="gap row">
		<div class="large-10 large-centered columns">
			<div class="row">
				<div class="large-6 columns">
					Never miss an important class (or go to a pointless one)!
				</div>
				<div class="large-6 columns">
					Students already there can tell you if it was worth going.
				</div>
			</div>
		</div>
	</div>
</div>