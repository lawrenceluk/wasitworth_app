<div class="row">
	<div class="center">
		<i class="fa fa-map-marker fa-5x"></i>
	</div>
	<div class="large-11 large-centered columns">
		<div class="huge center">Are you in class now?</div>
		<div class="row">
			<div class="large-8 small-11 large-centered small-centered columns">
				<div class="row">
					<div class="large-6 small-6 columns">
						<%= link_to new_school_w_class_path(@school.hiddenname), class: "nohover" do %>
							<div class="fatbutton center">Yes</div>
						<% end %>
					</div>
					<div class="large-6 small-6 columns">
						<%= link_to "/classes/#{@school.hiddenname}", class: "nohover" do %>
							<div class="fatbutton other center">No</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<br>
		<div class="center bigger" id="message">
			<br>
		</div>
		<div class="center gap">
			<%= image_tag 'student.png', width: 120 %>
		</div>
	</div>
</div>

<script>
	$(".fatbutton").hover(
		function () {
			if ($(this).html() == "Yes") {
				$("#message").html("How's it going so far?")
			} else {
				$("#message").html("Should you go?")
			}
		}
	)
</script>